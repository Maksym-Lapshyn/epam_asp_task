@using epam_asp_task.Models
@using epam_asp_task.Infrastructure
@model Inquirer

@{
    ViewBag.Title = "Inquirer";
}

@using (Html.BeginForm("InquirerForm", "Inquirer", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>@Model.Name</h1>
        </div>
        <div class="panel-body">
            @Html.HiddenFor(i => i.Id)
            @Html.HiddenFor(i => i.Name)
            @Html.RenderInquirer(Model)
            @Html.ValidationMessageFor(i => i.TextInput)
            @Html.ValidationMessageFor(i => i.Radio)
        </div>
        <div class="panel-footer">
            <p><button type="submit" class="btn btn-default">Submit Inquirer</button></p>
        </div>
    </div>
}