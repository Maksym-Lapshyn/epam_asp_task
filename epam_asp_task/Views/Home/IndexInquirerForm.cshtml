@using epam_asp_task.ViewModels
@using epam_asp_task.Infrastructure
@model InquirerViewModel

@using (Ajax.BeginForm("IndexInquirerForm", "Home", new AjaxOptions { UpdateTargetId = "indexInquirer", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <p>Vote</p>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary()
            @Html.HiddenFor(i => i.Name)
            @Html.HiddenFor(i => i.TextQuestion)
            @Html.HiddenFor(i => i.RadioQuestion)
            @Html.HiddenFor(i => i.HasText)
            @Html.HiddenFor(i => i.HasRadio)

            @Html.RenderInquirer(Model)
        </div>
        <div class="panel-footer">
            <p><button type="submit" class="btn btn-default">Submit</button></p>
        </div>
    </div>
}
